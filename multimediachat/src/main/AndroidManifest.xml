<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.multimediachat"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.sensor.proximity"
        android:required="false" />
    <uses-feature android:name="android.hardware.screen.landscape" />
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="false" />
    <uses-feature android:name="android.hardware.touchscreen" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" /> <!-- Maps API needs OpenGL ES 2.0. -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" /> <!-- End of copy. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.multimediachat.app.im.permission.IM_SERVICE" />
    <uses-permission android:name="android.permission.RECORD_VIDEO" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.google.android.gallery3d.permission.GALLERY_PROVIDER" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
        android:name=".app.ImApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/im_label"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.CheckUserInfoActivity"></activity>
        <activity android:name=".ui.ForgotPasswordActivity" />
        <activity android:name=".ui.ChatRoomSettingActivity" />
        <activity android:name=".ui.ChoosePwdFriendActivity" />
        <activity
            android:name=".ui.AppInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.LogOutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.AllTagsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ChangePWDActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.EnterCurrentPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.FriendProfileImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MainActivity"
            android:allowTaskReparenting="true"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="settings"
                    android:pathPrefix="/theme/"
                    android:scheme="picatalk" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.TutorialActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".ui.MyProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.IncomingActivity"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.CallingActivity"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.OutgoingActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MainTabNavigationActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.multimediachat.app.im.IMPS_CATEGORY" />

                <data android:mimeType="vnd.android.cursor.item/imps-chats" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/imps-invitations" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.IM_MANAGE_SUBSCRIPTION" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/imps-contacts" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.FileSendTabActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing" />
        <activity
            android:name=".ui.AddContactsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MobileContactsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.NewTagActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.SubscriptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SearchActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.FriendRequestActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".ui.FriendProfileChattingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.CreateProfileActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.ChooseFriendsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".ui.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".ui.ChatRoomActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".ui.MyQRCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.WebActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ShowChatImageActivity"
            android:screenOrientation="portrait" /> <!-- Chat Details -->
        <activity
            android:name=".ui.SearchChatHistoryActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.SettingIPTestActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.TagMemberListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.GalleryImageSelectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.GalleryImageOpenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.PhotoCropActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing" />
        <activity
            android:name=".ui.CameraActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing" />
        <activity
            android:name=".ui.PhotoPickerActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing" />
        <activity
            android:name=".ui.WallPaperPreviewActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing" />
        <activity
            android:name=".ui.ShowImageActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing" />
        <activity
            android:name=".util.qrcode.client.android.CaptureActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".app.BootCompletedListener"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.multimediachat.start" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".app.im.plugin.xmpp.XmppImPlugin"
            android:exported="false">
            <intent-filter>
                <action android:name="com.multimediachat.app.im.plugin" />
            </intent-filter>

            <meta-data
                android:name="com.multimediachat.app.im.provider_name"
                android:value="Jabber (XMPP)" />
            <meta-data
                android:name="com.multimediachat.app.im.provider_full_name"
                android:value="@string/provider_full_name_xmpp" />
            <meta-data
                android:name="com.multimediachat.app.im.signup_url"
                android:value="http://xmpp.org/services/" />
        </service>
        <service
            android:name=".service.MessengerService"
            android:exported="false"
            android:permission="com.multimediachat.app.im.permission.IM_SERVICE">
            <intent-filter>
                <action android:name="com.multimediachat.app.im.IRemoteImService" />
                <action android:name="com.multimediachat.app.im.SERVICE" />
            </intent-filter>
        </service>
        <service
            android:name=".service.FtpService"
            android:exported="false" />

        <provider
            android:name=".app.im.provider.ImpsProvider"
            android:authorities="com.multimediachat.app.im.provider.Imps"
            android:exported="false"
            android:grantUriPermissions="true"
            android:readPermission="com.multimediachat.app.providers.imps.permission.READ_ONLY"
            android:writePermission="com.multimediachat.app.providers.imps.permission.WRITE_ONLY" />
        <provider
            android:name=".app.TempFileProvider"
            android:authorities="temp_file_provider"
            android:exported="true"
            android:multiprocess="true" /> <!-- Linphone -->
        <service
            android:name="org.linphone.LinphoneService"
            android:label="@string/service_name"
            android:stopWithTask="false" />
        <service
            android:name="org.linphone.sync.SyncService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
            <meta-data
                android:name="android.provider.CONTACTS_STRUCTURE"
                android:resource="@xml/contacts" />
        </service>
        <service android:name="org.linphone.sync.AuthenticationService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <receiver android:name="org.linphone.NetworkManager">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="org.linphone.BluetoothManager"
            android:enabled="false" />
        <receiver android:name="org.linphone.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
            </intent-filter>
        </receiver>
        <receiver android:name="org.linphone.PhoneStateChangedReceiver">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".ui.IncomingActivity$MediaButtonIntentReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <receiver android:name=".ui.CallingActivity$MediaButtonIntentReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <receiver android:name=".ui.OutgoingActivity$MediaButtonIntentReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver> <!-- This one needs to be registered from application -->
        <receiver android:name="org.linphone.KeepAliveReceiver" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.multimediachat.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>