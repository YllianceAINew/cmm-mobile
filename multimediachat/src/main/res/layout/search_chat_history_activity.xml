<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <EditText
            android:id="@+id/txtSearch"
            style="@style/editbox_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="@string/search_chat"
            android:inputType="text"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="@dimen/search_box_icon_size"
            android:layout_height="@dimen/search_box_icon_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_search_close" />

    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/list_item_divider_color"/>

    <ListView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/list_item_divider_color"
        android:dividerHeight="0.5dp">
    </ListView>

    <TextView
        android:id="@+id/searchEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@null"
        android:textColor="@color/font_text_color"
        android:textSize="@dimen/font_level_3" />

</android.widget.LinearLayout>