<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/primary_list_item_bg">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_id"
                android:textColor="@color/font_text_color"
                android:textSize="@dimen/font_level_5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/font_level_5"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/img_qrcode"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/list_item_divider_color" />

    <LinearLayout
        android:id="@+id/lyt_receivedreq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/general_list_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/li_received" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friend_requests_title"
                android:textColor="@color/font_text_color"
                android:textSize="@dimen/font_level_5" />

            <TextView
                android:id="@+id/txt_receivedreq_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_label_color"
                android:textSize="@dimen/font_level_2" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/angler_right_width"
            android:layout_height="@dimen/angler_right_height"
            android:src="@drawable/angleright" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/list_item_divider_color"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/lyt_mobilecontacts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/general_list_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/li_mobilecontacts" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile_contacts"
                android:textColor="@color/font_text_color"
                android:textSize="@dimen/font_level_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_from_mobile_address_book"
                android:textColor="@color/gray_label_color"
                android:textSize="@dimen/font_level_2" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/angler_right_width"
            android:layout_height="@dimen/angler_right_height"
            android:src="@drawable/angleright" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/list_item_divider_color"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/lyt_scanqrcode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/general_list_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/li_scanqr" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qrcode_scan"
                android:textColor="@color/font_text_color"
                android:textSize="@dimen/font_level_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_contact_s_qr_code"
                android:textColor="@color/gray_label_color"
                android:textSize="@dimen/font_level_2" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/angler_right_width"
            android:layout_height="@dimen/angler_right_height"
            android:src="@drawable/angleright" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/list_item_divider_color" />

    <LinearLayout
        android:id="@+id/lyt_searchid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/general_list_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/li_searchid" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friend_find_by_id_or_name_title"
                android:textColor="@color/font_text_color"
                android:textSize="@dimen/font_level_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_contacts_id_number"
                android:textColor="@color/gray_label_color"
                android:textSize="@dimen/font_level_2" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/angler_right_width"
            android:layout_height="@dimen/angler_right_height"
            android:src="@drawable/angleright" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/list_item_divider_color" />

</LinearLayout>
