<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="horizontal"
    android:paddingBottom="3.0dip"
    android:paddingLeft="10dp"
    android:paddingTop="8.0dip" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center" >

        <com.multimediachat.ui.views.CircularImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/friend_list_edit_profile_size"
            android:layout_height="@dimen/friend_list_edit_profile_size"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/profilephoto" />

        <com.multimediachat.ui.views.PicaImageView
            android:id="@+id/imgCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-15dp"
            android:src="@drawable/selecteditem_user" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtNickName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:layout_gravity="center_vertical"
        android:gravity="left|center"
        android:maxLines="2"
        android:minLines="2"
        android:textSize="@dimen/font_level_5"
        android:textColor="@color/font_text_color" />

    <com.multimediachat.ui.views.PicaImageView
        android:id="@+id/onlineStatus"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/margin_l"
        android:src="@drawable/bg_circle"
        android:visibility="invisible"/>

</LinearLayout>