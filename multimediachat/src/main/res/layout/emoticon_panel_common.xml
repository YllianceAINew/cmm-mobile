<?xml version="1.0" encoding="utf-8"?>
<com.multimediachat.ui.emotic.IpMessageEmoticonPanel
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emoticon_panel"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/share_panel_port_height"
    android:background="@drawable/ipmsg_emoticons_background"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/emoticon_panel_zone"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/smiley_panel_btn_group"
            android:layout_width="wrap_content"
            android:layout_height="38.0dip"
            android:layout_weight="5.0"
            android:orientation="horizontal" >

            <!--add by KSJ for HTC Me 2016-01-31-->
            <LinearLayout
                android:id="@+id/template_panel"
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:layout_weight="1.0"
                android:addStatesFromChildren="true"
                android:background="@drawable/smiley_tab_bg"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/smiley_panel_template_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/template_selector"
                    android:checked="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/default_panel"
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:layout_weight="1.0"
                android:addStatesFromChildren="true"
                android:background="@drawable/smiley_tab_bg"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/smiley_panel_default_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/default_selector"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/defaultplus_panel"
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:layout_weight="1.0"
                android:addStatesFromChildren="true"
                android:background="@drawable/smiley_tab_bg"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/smiley_panel_defaultplus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/defaultplus_selector"
                    android:checked="false" />
            </LinearLayout>

        </RadioGroup>
    </LinearLayout>
</com.multimediachat.ui.emotic.IpMessageEmoticonPanel>
