<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_dialog"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/bg_dialog_header"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialog_icon"
            android:layout_marginRight="@dimen/margin_s"/>

        <TextView
            android:id="@+id/dlgtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_level_5"
            android:text="@string/group_name"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="@dimen/friend_list_item_separator2_margin_left"
        android:background="@color/list_item_divider_color"
        android:visibility="visible" />

    <View
        android:id="@+id/separator1"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/friend_list_item_separator2_margin_left"
        android:background="@drawable/bg_dialog_header"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dialog_content_size"
            android:textColor="@color/list_item_header_text_color"
            android:text="@string/input_group_name"/>
        <EditText
            android:id="@+id/group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dialog_content_size"
            android:textCursorDrawable="@drawable/text_cursor"
            android:singleLine="true"
            android:maxLength="@integer/max_roomname_length"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/dialog_button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_primary_radius"
            android:focusable="true"
            android:text="@string/ok"
            android:textSize="@dimen/font_level_5"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>