<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/general_list_item_bg"
    android:gravity="center_vertical">

    <com.multimediachat.ui.views.CircularImageView
        android:id="@+id/img_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_contactname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_text_color"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="@dimen/font_level_5" />

        <TextView
            android:id="@+id/txt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_contactname"
            android:layout_marginTop="4dp"
            android:text="@string/register_id"
            android:textColor="@color/gray_label_color"
            android:textSize="@dimen/font_level_2" />

        <TextView
            android:id="@+id/txt_chatname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt_text"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/txt_text"
            android:textColor="@color/gray_label_color"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="@dimen/font_level_2" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_plus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/btn_mobile_contact_plus"/>
</LinearLayout>
