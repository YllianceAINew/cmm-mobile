<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topLayout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_waiting_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/waiting_capture"
        style="@style/font4"
        android:visibility="gone"/>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/side_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/lyt_bottom">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/active_call"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:gravity="center">

                        <RelativeLayout
                            android:id="@+id/avatar_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <com.multimediachat.ui.views.CircularImageView
                                android:id="@+id/profileImg"
                                android:layout_width="@dimen/calling_profile_size"
                                android:layout_height="@dimen/calling_profile_size"
                                android:src="@drawable/profilephoto" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/active_call_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/avatar_layout">

                            <TextView
                                android:id="@+id/current_contact_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_s"
                                android:gravity="center"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:singleLine="true"
                                android:textColor="@color/font_text_color"
                                android:textSize="@dimen/font_level_8"/>

                            <Chronometer
                                android:id="@+id/current_call_timer"
                                style="@style/font28"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/current_contact_name"
                                android:gravity="center"
                                android:textColor="@color/gray_label_color"
                                android:textSize="@dimen/font_level_6"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/remote_pause"
                            android:background="@color/colorC"
                            android:alpha="0.9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:src="@drawable/waiting_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"/>

                            <TextView
                                android:text="@string/call_paused_by_remote"
                                style="@style/font16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"/>

                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/calls_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/no_current_call"
                        android:background="@color/colorC"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_above="@id/calls_list"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:src="@drawable/waiting_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>

                        <TextView
                            style="@style/font16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/lyt_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginVertical="@dimen/margin_l"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lyt_mute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/default_padding_size"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btn_mute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_m"
                        android:src="@drawable/btn_mute"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mute_outgoing"
                        android:textColor="@color/font_text_color"
                        android:textSize="@dimen/font_level_4"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_to_voice_call"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/default_padding_size"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/btn_to_voice_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_m"
                        android:src="@drawable/btn_to_voice_call"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/to_voice_call"
                        android:textColor="@color/font_text_color"
                        android:textSize="@dimen/font_level_4"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/default_padding_size"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btn_hangup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_m"
                        android:src="@drawable/btn_decline"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/decline"
                        android:textColor="@color/font_text_color"
                        android:textSize="@dimen/font_level_4"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_speaker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/default_padding_size"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btn_speaker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_m"
                        android:src="@drawable/btn_outgoing_speaker"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speaker_outgoing"
                        android:textColor="@color/font_text_color"
                        android:textSize="@dimen/font_level_4"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_switch_camera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/default_padding_size"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/btn_switch_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_m"
                        android:src="@drawable/btn_outgoing_switch_camera"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/switch_camera"
                        android:textColor="@color/font_text_color"
                        android:textSize="@dimen/font_level_4"/>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>
