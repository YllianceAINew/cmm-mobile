<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rootView"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="10dp"
	android:background="@drawable/bg_dialog"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/actionbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="12dp"
		android:background="@drawable/bg_dialog_header"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/dialog_icon"
			android:layout_marginRight="@dimen/margin_s"/>

		<TextView
			android:id="@+id/msgtitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/font_level_5"
			android:text="@string/information"
			android:textColor="@color/white"
			android:textStyle="bold"/>
	</LinearLayout>

	<View
		android:id="@+id/separator"
		android:layout_width="fill_parent"
		android:layout_height="0.5dip"
		android:layout_marginLeft="@dimen/friend_list_item_separator2_margin_left"
		android:background="@color/list_item_divider_color"
		android:visibility="visible" />

	<View
		android:id="@+id/separator1"
		android:layout_width="fill_parent"
		android:layout_height="1dip"
		android:layout_marginLeft="@dimen/friend_list_item_separator2_margin_left"
		android:background="@drawable/bg_dialog_header"
		android:visibility="visible" />

	<TextView
		android:id="@+id/summary"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textSize="@dimen/dialog_content_size"
		android:textColor="@color/white"
		android:layout_marginTop="5dp"
		android:visibility="gone"
		/>

	<TextView
		android:id="@+id/msgcontent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="@dimen/dialog_content_size"
		android:layout_margin="15dp"
		android:textColor="@color/black"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="12dp"
		android:gravity="center"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btn_ok"
			android:layout_width="@dimen/dialog_button_width"
			android:layout_height="wrap_content"
			android:background="@drawable/btn_primary_radius"
			android:focusable="true"
			android:text="@string/ok"
			android:textSize="@dimen/font_level_5"
			android:textColor="@color/white" />

	</LinearLayout>

</LinearLayout>